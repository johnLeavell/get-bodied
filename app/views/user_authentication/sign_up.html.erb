<div class="container">
  <form action="/insert_user" method="post" class="text-center">
    <h1 class="h3 fw-normal mb-3 text-white">Sign up</h1>

    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2 mb-3">
        <input type="email" class="form-control" id="email_box" name="query_email" placeholder="Choose an email..." required>
        <label for="email_box">Email address</label>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2 mb-3">
        <input type="text" class="form-control" id="username" name="query_username" placeholder="Choose a username..." required>
        <label for="username">Username</label>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2 mb-3">
        <input type="password" class="form-control" id="password_box" name="query_password" placeholder="Choose a password..." required>
        <label for="password_box">Password</label>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2 mb-3">
        <input type="password" class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." required>
        <label for="password_confirmation_box">Password Confirmation</label>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-8 offset-sm-2">
        <button type="submit" class="btn btn-lg btn-dark">Sign up</button>
      </div>
    </div>

    <input type="hidden" id="ai_messages_count_box" name="query_ai_messages_count">
  </form>
</div>

<hr>

<p class="text-white text-center">
  Or, <a class="text-white" href="/user_sign_in">Sign in</a> instead.
</p>

