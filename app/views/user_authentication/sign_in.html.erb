              <input type="email" class="form-control" id="email_box" name="query_email" placeholder="name@example.com" required autofocus>
              <label for="email_box">Email address</label>
            </div>
            <div class="form-group w-25 p-3">
              <input type="password" class="form-control text-secondary" id="password_box" name="query_password" placeholder="Password">
              <label for="password_box">Password</label>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-lg btn-dark">Sign in</button>
          </div>
        </div>
      </form>
    </div>
