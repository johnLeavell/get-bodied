<div class="container mt-4 border">
  <div class="container-content">
    <h1 class="m-3">Welcome <%= @the_user.username %></h1>
    <div class="m-3">
    </h2>
    <span>
      <ul>
       <a href="/ai_messages">Create a workout!</a>
      </ul>
    </span>
  </div>
</div>

<table class="table table-bordered mb-3">
  <tr>
    <th>
      Workout
    </th>

    <th>
      Created at
    </th>

    <th>
      More info
    </th>
  </tr>

  <tr>
    <td>
      <%= simple_format(@user_workouts.content) %>
    </td>

    <td>
      <%= time_ago_in_words(@user_workouts.created_at) %> ago
    </td>

    <td>
      <a href="/ai_messages/<%= @user_workouts.id %>">
        Show details
      </a>
    </td>
  </tr>
</table>
