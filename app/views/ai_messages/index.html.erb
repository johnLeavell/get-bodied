  <div>
    <h1>
      List of all ai messages
    </h1>
  </div>
    
    <hr>

  <div>
    <h2>
      What kind of wokrout do you want to do?
    </h2>
    
    <% if @current_user !=nil %>
    <form action="/insert_ai_message" method="post">
      <input type="hidden" id="role_box" name="query_role" value="system">
      <div>
        <label for="content_box">Content</label>
        <textarea id="content_box" name="query_content" rows="4"></textarea>
      </div>
        <input type="hidden" id="owner_id_box" name="query_owner_id" value="<%= @current_user.id %>">
      <button>
        Create ai message
      </button>
    </form>
  </div>
<% end %>

<hr>
<div class="container">
  <div>
    <table class="table table-bordered">
      <tr>
        <th>
          ID
        </th>

        <%# <th>
          Role
        </th> %>

        <th>
          Workout
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          More info
        </th>
      </tr>

      <% @ai_messages.each do |an_ai_message| %>
        <tr>
          <td>
            <%= an_ai_message.id %>
          </td>

          <td>
            <%= simple_format an_ai_message.content %>
          </td>

          <td>
            <%= an_ai_message.user_id %>
          </td>

          <td>
            <%= time_ago_in_words(an_ai_message.created_at) %> ago
          </td>

          <td>
            <a href="/ai_messages/<%= an_ai_message.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
