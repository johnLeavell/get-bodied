<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>List of all workout exercises</h1>
    </div>
  </div>
</div>

<hr>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a new workout</h2>

      <form action="/insert_workout_exercise" method="post">
        <div class="form-group">
          <label for="exercise_id_box">Exercise</label>
          <input type="text" id="exercise_id_box" name="query_exercise_id" class="form-control">
        </div>

        <div class="form-group">
          <label for="workout_id_box">Workout</label>
          <input type="text" id="workout_id_box" name="query_workout_id" class="form-control">
        </div>

        <div class="form-group">
          <label for="reps_box">Reps</label>
          <input type="text" id="reps_box" name="query_reps" class="form-control">
        </div>

        <div class="form-group">
          <label for="weight_box">Weight</label>
          <input type="text" id="weight_box" name="query_weight" class="form-control">
        </div>

        <div class="form-group">
          <label for="sets_box">Sets</label>
          <input type="text" id="sets_box" name="query_sets" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary btn-dark">Create workout exercise</button>
      </form>
    </div>
  </div>
</div>

<hr>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered">
        <tr>
          <th>ID</th>
          <th>Exercise</th>
          <th>Workout</th>
          <th>Reps</th>
          <th>Weight</th>
          <th>Sets</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th></th>
        </tr>

        <% @list_of_workout_exercises.each do |a_workout_exercise| %>
          <tr>
            <td><%= a_workout_exercise.id %></td>
            <td><%= a_workout_exercise.exercise_id %></td>
            <td><%= a_workout_exercise.workout_id %></td>
            <td><%= a_workout_exercise.reps %></td>
            <td><%= a_workout_exercise.weight %></td>
            <td><%= a_workout_exercise.sets %></td>
            <td><%= time_ago_in_words(a_workout_exercise.created_at) %> ago</td>
            <td><%= time_ago_in_words(a_workout_exercise.updated_at) %> ago</td>
            <td>
              <a href="/workout_exercises/<%= a_workout_exercise.id %>" class="btn btn-info">Show details</a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<hr>
